        "tagsIncludeFeaturedInPosts": true,
        "authorsIncludeFeaturedInPosts": true,
        "featuredPostsNumber": 0,
        "tagsFeaturedPostsNumber": 0,
        "authorsFeaturedPostsNumber": 0,
        "createTagPages": true,
        "createAuthorPages": true,
        "createTagsList": true,
        "create404page": true,
        "createSearchPage": true,
        "customHTML": {
            "beforePost": "Before every post",
            "afterPost": "After every post"
        }
    },
    "supportedFeatures": {
        "blockEditor": true,
        "tagsList": true,
        "tagPages": true,
        "tagImages": true,
        "authorPages": true,
        "authorImages": true,
        "searchPage": true,
        "errorPage": true,
        "customSearch": true, 
        "customComments": true,
        "embedConsents": true
    },
    "menus": {
        "mainMenu": "Main menu",
        "footerMenu": "Footer menu"
    },
    "config": [
        {
            "name": "postsPerPage",
            "label": "Posts per page",
            "value": 12,
            "type": "number"
        },
        {
            "name": "tagsPostsPerPage",
